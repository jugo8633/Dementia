<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蒙特利爾智能測驗"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="基本資料"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="32sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="姓名"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/style_edit_text"
                android:ems="10" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="性別"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />

            <RadioButton
                android:id="@+id/radioButtonMan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="男"
                android:textSize="32sp" />

            <RadioButton
                android:id="@+id/radioButtonWoman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="43dp"
                android:text="女"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewEducation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教育"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />

            <CheckBox
                android:id="@+id/checkBoxHightSchool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:text="高中以上"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出生日期"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/editTextBYear"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/style_edit_text"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textViewBYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/editTextBMonth"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/style_edit_text"
                android:ems="10"
                android:inputType="number"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textViewBMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/editTextBDay"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/style_edit_text"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textViewBDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="測驗日期"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/editTextTYear"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/style_edit_text"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textViewTYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/editTextTMonth"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/style_edit_text"
                android:ems="10"
                android:inputType="number"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textViewTMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/editTextTDay"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/style_edit_text"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textViewTDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonPOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="確  定"
                android:textSize="32sp" />

            <Button
                android:id="@+id/buttonPCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="取  消"
                android:textSize="32sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>