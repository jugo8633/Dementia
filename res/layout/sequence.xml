<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewSequenceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蒙特利爾智能測驗"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textViewSequenceSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="交替轉換檢測"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="32sp" />

        <View
            android:id="@+id/viewLine"
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="60dp"
            android:background="@android:color/black"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:paddingTop="60dp" />

        <TextView
            android:id="@+id/textViewVDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="請按順序點選"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/imageViewSequence"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/sequence" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonSequenceRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正  確"
                android:textSize="32sp" />

            <Button
                android:id="@+id/buttonSequenceErr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="錯  誤"
                android:textSize="32sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>