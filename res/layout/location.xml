<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewLocationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蒙特利爾智能測驗"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textViewLocationSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="定向檢測"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="32sp" />

        <View
            android:id="@+id/viewLine"
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="30dp"
            android:background="@android:color/black"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:paddingTop="60dp" />

        <TextView
            android:id="@+id/textViewLo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="回答目前日期"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="32sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/editTextLoYear"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/style_edit_text"
                android:ems="10"
                android:inputType="number" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textViewLoYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="年"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/editTextLoMonth"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/style_edit_text"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textViewLoMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="月"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/editTextLoDay"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/style_edit_text"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textViewLoDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="日"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewLoWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星期"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/editTextLoWeek"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/style_edit_text"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewLoAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回答目前位置"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewLoAddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地點"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/editTextLoAddr"
                android:layout_width="450dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/style_edit_text"
                android:ems="10" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewLoCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="城市"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/editTextLoCity"
                android:layout_width="450dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/style_edit_text"
                android:ems="10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonLocationOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="結  束"
                android:textSize="32sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>